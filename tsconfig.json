{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "allowJs": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": ["node_modules",]
}
